
<? include ./partials/header ?>

<div class="ui main text container">

  <!-- Trigger/Open The Modal -->
  <center><button id="myBtn" class="ui  black basic button">Join our Newsletter Cadet</button></center>

  <div class="ui huge header">
    All Blog Posts
  </div>

  <div class="ui segment">
    <div class="ui divided items">

      <? blogs.forEach(function(blog) { ?>

        <? const postUrl = '/blogs/' + blog._id; ?>

        <div class="item">

            <a href="<?= postUrl ?>" class="image">
              <img src="<?= blog.imageUrl ?>" href="#">
            </a>

          <div class="content">

            <div class="header">
              <a href="<?= postUrl ?>">
                <?= blog.title ?>
              </a>
            </div>

            <div class="meta">
              <span>
                <?= blog.created.toDateString() ?>
              </span>
            </div>

            <div class="description">
              <p>
                <? if(blog.body.length > 250) { ?>
                  <?- blog.body.substring(0,250) ?>...
                <? } else { ?>
                  <?- blog.body ?>
                <? }; ?>
              </p>
            </div>

            <div class="extra">
              <a class="ui small olive icon button" href="<?= postUrl ?>">
                Expand Article
                <i class="right chevron icon"></i>
              </a>
            </div>

          </div>

        </div>
      <? }); ?>

    </div>
  </div>

</div>

<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <form method="POST">
        <div class="ui massive form">
          <header>
            <h2>Join our Newsletter Cadet!</h2>
          </header>
          <div class="two fields">
            <div class="modal_input">
              <label>Enter your Email</label>
              <br>
              <input placeholder="Email" type="text" name="username">
              <p>Join our Newsletter for all the need to know Cadet.
              <br>
                 You will never be left behind enemy lines when you with our Newsletter cadet.</p>
            </div>
          </div>
          <button class="ui olive basic button">Enlist!</button>
        </div>
    </form>
  </div>

  <script>
// Get the modal
var modal = document.getElementById('myModal');

// Get the button that opens the modal
var btn = document.getElementById("myBtn");

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks the button, open the modal
btn.onclick = function() {
    modal.style.display = "block";
}

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
    modal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
</script>

